@using JuliePro_Models.ViewModels
@model GenericControllerUpsertVM<Customer>
@{
ViewData["Title"] = SharedLocals[Model.GeneralViewInfos.PageTitle];
}

<div class="row justify-content-center view-upsert">
    <div class="col-8">
        @{
            ViewData["Id"] = Model.Id;
            var ListForTrainer_Id = Model.SelectLists["ListForTrainer_Id"];
        }
        <partial name="_ViewHeader" model="Model.GeneralViewInfos" view-data="ViewData" />
        <form asp-action="Upsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IsCreate" />
            <input type="hidden" asp-for="Entity.Id" />
            <div class="form-floating mb-3">
                <input asp-for="Entity.FirstName" class="form-control" id="FirstName" placeholder="@Html.DisplayNameFor(model => model.Entity.FirstName)" />
                <label for="FirstName" asp-for="Entity.FirstName"></label>
                <span asp-validation-for="Entity.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Entity.LastName" class="form-control" id="LastName" placeholder="@Html.DisplayNameFor(model => model.Entity.LastName)" />
                <label for="LastName" asp-for="Entity.LastName"></label>
                <span asp-validation-for="Entity.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Entity.Email" class="form-control" id="Email" placeholder="@Html.DisplayNameFor(model => model.Entity.Email)" />
                <label for="Email" asp-for="Entity.Email"></label>
                <span asp-validation-for="Entity.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Entity.Photo" class="form-control" id="Photo" placeholder="@Html.DisplayNameFor(model => model.Entity.Photo)" />
                <label for="Photo" asp-for="Entity.Photo"></label>
                <span asp-validation-for="Entity.Photo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Entity.BirthDate" class="form-control" id="BirthDate" placeholder="@Html.DisplayNameFor(model => model.Entity.BirthDate)" />
                <label for="BirthDate" asp-for="Entity.BirthDate"></label>
                <span asp-validation-for="Entity.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Entity.StartWeight" class="form-control" id="StartWeight" placeholder="@Html.DisplayNameFor(model => model.Entity.StartWeight)" />
                <label for="StartWeight" asp-for="Entity.StartWeight"></label>
                <span asp-validation-for="Entity.StartWeight" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Entity.Trainer_Id" class="form-select" placeholder="@Html.DisplayNameFor(model => model.Entity.Trainer_Id)" asp-items="ListForTrainer_Id"></select>
                <label asp-for="Entity.Trainer_Id"></label>
                <span asp-validation-for="Entity.Trainer_Id" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">@SharedLocals[Model.GeneralViewInfos.SubmitButtonText]</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
