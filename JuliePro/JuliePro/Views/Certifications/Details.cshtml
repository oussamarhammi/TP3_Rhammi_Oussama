@using JuliePro_Models.ViewModels
@model GenericControllerDisplayVM<CertificationForDisplayVM>
@{
ViewData["Title"] = SharedLocals[Model.GeneralViewInfos.PageTitle];
}

<div class="row justify-content-center view-display">
    <div class="col-8">
        @{
            ViewData["Id"] = Model.Id;
        }
        <partial name="_ViewHeader" model="Model.GeneralViewInfos" view-data="ViewData" />
        <div class="form-floating mb-3">
            <input asp-for="Entity.Title" readonly class="form-control" id="Title" placeholder="@Html.DisplayNameFor(model => model.Entity.Title)" />
            <label for="Title" asp-for="Entity.Title"></label>
            <span asp-validation-for="Entity.Title" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Entity.CertificationCenter" readonly class="form-control" id="CertificationCenter" placeholder="@Html.DisplayNameFor(model => model.Entity.CertificationCenter)" />
            <label for="CertificationCenter" asp-for="Entity.CertificationCenter"></label>
            <span asp-validation-for="Entity.CertificationCenter" class="text-danger"></span>
        </div>
        @if (!Model.IsDetails)
        {
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Entity.Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-primary">@SharedLocals[Model.GeneralViewInfos.SubmitButtonText]</button>
            </div>
        </form>
        }
    </div>
</div>
@section Scripts {
}
